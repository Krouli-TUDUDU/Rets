<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.NewPage1"
             Title="NewPage1">
    <ScrollView>
        <AbsoluteLayout Margin="20">


            <Image
                x:Name="Dog"
                Source="dog.jpg"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                AbsoluteLayout.LayoutBounds="0.5, 0.5, 400, 400"
            />

            <Label
                Text="Инструкция по применению"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                AbsoluteLayout.LayoutBounds="0.5, 0.7, 230, 100"
                TextColor="White"
                FontSize="Medium"
                />

            <ImageButton
                x:Name="nazad"
                Source="nazad2.png"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                AbsoluteLayout.LayoutBounds="0, 1, 50, 50"
            />

            <ImageButton
                x:Name="vpered"
                Source="vpered.png"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                AbsoluteLayout.LayoutBounds="1, 1, 50, 50"
            />

            
        </AbsoluteLayout>
    </ScrollView>
</ContentPage>